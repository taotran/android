<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView android:id="@+id/qScrollView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewFQuestion"
                android:layout_alignParentTop="true" android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold" android:textSize="14sp"/>
    </ScrollView>

    <tvtran.com.vn.custom.MyScrollView android:id="@+id/aScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/qScrollView"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginTop="10dp"
                android:id="@+id/textViewFullAnswer"
                android:textSize="14sp"
        />
    </tvtran.com.vn.custom.MyScrollView>


</RelativeLayout>